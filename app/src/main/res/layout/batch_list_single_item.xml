<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">

        <TextView
            android:id="@+id/batch_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batch Morning"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            android:weightSum="7">

            <LinearLayout
                android:id="@+id/day_week_ll_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/day_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_week_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sunday"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_red_light"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/day_week_ll_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/day_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_week_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sun"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_red_light"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/day_week_ll_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/day_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_week_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sunday"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_red_light"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/day_week_ll_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/day_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_week_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sunday"
                    android:paddingBottom="3dp"
                    android:background="@drawable/batch_day_selector_bg"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_red_light"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/day_week_ll_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/day_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_week_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sunday"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_red_light"
                    android:visibility="invisible"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/day_week_ll_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/day_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_week_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sunday"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_red_light"
                    android:visibility="invisible"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/day_week_ll_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/day_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_week_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sunday"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_red_light"
                    android:visibility="invisible"/>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/batch_schedule_from_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text=" TO "
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/batch_schedule_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


</LinearLayout>
